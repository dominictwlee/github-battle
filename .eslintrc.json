{
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react"
	],
	"rules": {
		"jsx-a11y/anchor-is-valid": ["warn", {
			"components": ["link"],
			"specialLink": ["to"],
			"aspects": ["noHref", "invalidHref", "preferButton"]
			}]
	},
	"plugins": [
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	}
}
